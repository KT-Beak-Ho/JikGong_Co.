<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.main.home.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@color/Primary"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="28dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="프로젝트 목록"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="24sp"
                android:textColor="@color/White"
                android:layout_marginStart="16dp"
                android:gravity="start"
                />
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/button_notification"
                android:src="@drawable/ic_notification"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="16dp"
                android:layout_gravity="end"
                android:padding="0dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/homeTapLayout"
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:background="@color/Primary"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:tabGravity="center"
                app:tabIndicatorColor="@color/White"
                app:tabIndicatorHeight="3dp"
                app:tabPaddingEnd="16dp"
                app:tabPaddingStart="16dp"
                app:tabSelectedTextColor="@color/White"
                app:tabTextAppearance="@style/HomeTabTextAppearance"
                app:tabTextColor="@color/OnPrimaryDisabled" />

            <Button
                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:text="직공 TIP"
                android:textColor="@color/White"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="14dp"
                android:background="@drawable/fragment_home_tip_button"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/homeViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Background"
        />


</LinearLayout >